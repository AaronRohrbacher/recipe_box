<h3>Category:</h3>
<% if @tags.any? %>
  <% @tags.each do |tag| %>
  <p><%=tag.tag%></p>
  <%end%>
<%else%>
  <p>Add a tag, ya hag!</p>
<%end%>


<form action="/recipe/<%=@recipe.id%>/tag" method="post">
  <label for ='tag_id'>Add that tag:</label>
  <select name = 'tag_id'>
    <%@tags.each do |tag|%>
      <option value = "<%=tag.id%>"><%=tag.tag%></option>
      <%end%>
  </select>
  <button type="submit">Shit, add that tag baby!</button>
</form>
